#!/bin/sh -e

patch -p1 < fix-memory-include.patch

export DESTDIR="$1"

# ncurses is only useful for minetest server.
cmake -B build \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DVERSION_EXTRA=_1 \
    -DENABLE_GETTEXT=0 \
    -DENABLE_CURSES=0 \
    -DENABLE_SYSTEM_JSONCPP=1

cmake --build   build
cmake --install build
